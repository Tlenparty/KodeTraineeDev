<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables">

    <!-- аватарка пользователя -->
    <ImageView
        android:id="@+id/tv_avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:paddingStart="@dimen/border_margin"
        android:paddingTop="@dimen/border_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,RtlSymmetry"
        tools:src="@color/black" />

    <!-- имя пользователя -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/border_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintStart_toEndOf="@id/tv_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name"
        tools:ignore="RtlSymmetry" />

    <!-- имя пользователя -->
    <TextView
        android:id="@+id/tv_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/border_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Surname"
        tools:ignore="RtlSymmetry" />

    <!-- департамент пользователя -->
    <TextView
        android:id="@+id/tv_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/border_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/departure_text_size"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:ignore="RtlSymmetry,SmallSp"
        tools:text="Department" />
</androidx.constraintlayout.widget.ConstraintLayout>

