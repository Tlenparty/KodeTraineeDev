<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- аватарка пользователя -->
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/users_avatar_size"
        android:layout_height="@dimen/users_avatar_size"
        android:paddingStart="@dimen/border_margin"
        android:paddingTop="@dimen/border_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,RtlSymmetry"
        tools:src="@color/black" />

    <!-- имя пользователя -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/border_margin"
        android:layout_marginStart="@dimen/border_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_text_size"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        tools:text="Name" />

    <!-- фамилия пользователя -->
    <TextView
        android:id="@+id/tv_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/border_margin"
        android:paddingStart="@dimen/border_margin"
        android:textColor="@android:color/black"
        android:lines="1"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        tools:ignore="RtlSymmetry"
        tools:text="Surname" />

    <!-- департамент пользователя -->
    <TextView
        android:id="@+id/tv_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/margin_x_small"
        android:textSize="@dimen/department_text_size"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:ignore="RtlSymmetry,SmallSp"
        tools:text="Department" />

    <!-- разделитель (костыльный recyclerItemDecoration)-->
    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hairline"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/color_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
        tools:ignore="RedundantNamespace" />

</androidx.constraintlayout.widget.ConstraintLayout>

